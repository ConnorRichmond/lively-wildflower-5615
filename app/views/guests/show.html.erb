<h1><%= @guest.name %></h1>
<h2>Rooms they've stayed in:</h2>
<ul>
  <% @guest.rooms.each do |room| %>
    <li>
      <%= "Hotel: #{room.hotel.name}" %>
      <%= "Suite: #{room.suite}" %>
      <%= "Nightly Rate: $#{room.rate}" %>
    </li>
  <% end %>
</ul>

<h2>Add a room:</h2>
<%= form_with url: "/guests/#{@guest.id}/add_rooms", method: :post do |form| %>
  <%= form.label :room_id, 'Room ID:' %>
  <%= form.text_field :room_id %>
  <%= form.submit 'Add Room' %>
<% end %>